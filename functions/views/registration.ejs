</head>

<body>
	<h3>SCHOOL REGISTRATION FORM</h3>

	<form action='/onSubmit' method="post" enctype="application/x-www-form-urlencoded"">
		<table align="center" cellpadding="10">
				<tr>
						<td>SCHOOL ID</td>
						<td><input type="text" name="schoolId" maxlength="30" />
							(max 30 characters a-z and A-Z)
						</td>
					</tr>
			<tr>
				<td>SCHOOL NAME</td>
				<td><input type="text" name="schoolName" maxlength="30" />
					(max 30 characters a-z and A-Z)
				</td>
			</tr>
			<tr>
				<td>FACULTY NAME</td>
				<td><input type="text" name="facultyName" maxlength="30" />
					(max 30 characters a-z and A-Z)
				</td>
			</tr>
			<tr>
				<td> FACULTY EMAIL ID</td>
				<td><input type="text" name="email" maxlength="100" /></td>
			</tr>
			<tr>
				<td> FACULTY MOBILE NUMBER</td>
				<td>
					<input type="text" name="mobile" maxlength="10" />
					(10 digit number)
				</td>
			</tr>
			<tr>
				<td> CHEQUE NUMBER</td>
				<td>
					<input type="text" name="cheque" maxlength="20" />

				</td>
			</tr>
			<tr>
				<td colspan="2" align="center">
					<input type="submit" name="submitbtn" onclick="" value="Add School">
					<br>
					<br>
					<input type="reset" value="Add Student">
				</td>
			</tr>
		</table>
	</form>
